<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/match_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/header_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/red"
        android:text="Match!"
        android:layout_centerHorizontal="true"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/match_description"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_match"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_below="@id/match_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/callerImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/no_picture_circle" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/calleeImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/no_picture_circle" />
    </LinearLayout>
</RelativeLayout>